<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="ip:"
        android:id="@+id/tv_ip"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="false" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="state"
        android:id="@+id/tv_state"
        android:layout_below="@+id/tv_ip"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="碰撞"
        android:id="@+id/btn_collision"
        android:singleLine="true"
        android:layout_below="@+id/tv_state"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="水位"
        android:id="@+id/btn_water"
        android:layout_below="@+id/tv_state"
        android:layout_toStartOf="@+id/btn_water_cancel" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="碰撞解除"
        android:id="@+id/btn_collision_cancel"
        android:layout_below="@+id/tv_state"
        android:layout_toEndOf="@+id/btn_collision" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="水位解除"
        android:id="@+id/btn_water_cancel"
        android:layout_below="@+id/tv_state"
        android:layout_alignEnd="@+id/tv_state" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="藍芽配對"
        android:id="@+id/btn_bluetooth"
        android:layout_above="@+id/btn_bluetoothsend"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="藍芽訊息發送"
        android:id="@+id/btn_bluetoothsend"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/et_bluetoothmsg"
        android:layout_above="@+id/btn_bluetooth"
        android:layout_centerHorizontal="true" />

    <ListView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/lv_bluetoothdevice"
        android:layout_centerHorizontal="true"
        android:layout_above="@+id/et_bluetoothmsg"
        android:layout_below="@+id/tv_bluetoothstate" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="狀態:"
        android:id="@+id/tv_bluetoothstate"
        android:layout_below="@+id/tv_bluetoothreceive"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="接收"
        android:id="@+id/tv_bluetoothreceive"
        android:layout_below="@+id/btn_collision"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="UDP測試發送"
        android:id="@+id/btn_udpsend"
        android:layout_below="@+id/btn_bluetooth"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="畫面1"
        android:id="@+id/btn_test"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true" />

    <!--<EditText-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:id="@+id/et_account"-->
        <!--android:layout_below="@+id/tv_state"-->
        <!--android:layout_alignParentStart="true" />-->
</RelativeLayout>
